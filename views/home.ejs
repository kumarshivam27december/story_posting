<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #e9ecef;
    }
    .post-container {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Story Posts</h1>
    <% posts.forEach(post => { %>
      <div class="post-container">
        <h2><a href="/posts/<%= post._id %>" class="text-dark"><%= post.title %></a></h2>
        <p class="text-muted">By: <%= post.author %> | Posted on: <%= post.date.toDateString() %></p>
      </div>
    <% }) %>

    <div class="mt-3 text-center">
      <% if (user) { %>
        <a href="/compose" class="btn btn-primary">Compose a New Story</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
      <% } else { %>
        <a href="/login" class="btn btn-secondary">Login</a>
        <a href="/register" class="btn btn-secondary">Register</a>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
